#!/usr/bin/env node
process.env.DB_CLIENTS = 1;
var { query } = require('../models/db');

NUM_DAYS_KEEP = 14;

var cleanseDate = new Date();
cleanseDate.setDate(cleanseDate.getDate() - NUM_DAYS_KEEP);

var queryText = 'DELETE FROM game_snapshots WHERE snapshot_time < $1';
return query(queryText, [ cleanseDate.toISOString() ]).then(res => {
    
}, err => {
	console.log(err);
});

